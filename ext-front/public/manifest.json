{
  "manifest_version": 3,
  "name": "AiBrowse Research Assistant",
  "version": "1.0",
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}